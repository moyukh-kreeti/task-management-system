<div class="min-height-300 bg-primary position-absolute" style="height: 20rem; width: 100%"></div>
<div class="container-fluid mt-5" style="position: relative">
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-4 col-md-6 col-12 hover" id="assign-task-to-user">
          <div class="card mb-4 custom-card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-uppercase font-weight-bold">
                      Assign Task
                    </p>
                    <p class="mb-0">To Employee</p>
                  </div>
                </div>
                <div class="col-4 text-end d-flex" style="justify-content: center; align-items: center">
                  <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle"
                    id="add-user">
                    <%= image_tag "task.png" , {class: "rounded-circle" ,alt: "Hi" } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
     <div class="col-lg-12">
      <div class="card mb-4 custom-card">
            <div class="card-body p-3">
              <table class="table caption-top">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Role</th>
                  <th scope="col">Pending Task</th>
                  <th scope="col">Current Task</th>
                </tr>
              </thead>
              <tbody id="assigned_task_list">

              </tbody>
            </table>
            </div>
          </div>
     </div>
  </div>
</div>


<div class="modal fade" id="task-add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Assign Task</h5>
      </div>
      <div class="modal-body">

        <div class="form-group mt-3">
          <input type="text" class="form-control" id="task-name" placeholder="Task Name" />
        </div>
        <div class="form-group mt-3">
          <label for="task-category">Task Category</label>
          <select id="task-category" class="form-select">
            <option selected>Choose...</option>
            <% @task_category.each do |category| %>
            <option value="<%=category.id%>"><%= category.task_name %></option>
            <% end %>
          </select>
        </div>

        <div class="form-group mt-3">
          <input type="text" class="form-control" id="input-fname" placeholder="Sub Task" />
        </div>
        <div class="form-group mt-3">
          <label for="task-date">Day task to be performed</label>
          <input type="date" class="form-control" id="task-date" placeholder="Task Date" />
        </div>
        <div class="form-group mt-3">
          <label for="task-time">Time task to be performed</label>
          <input type="time" class="form-control" id="task-time" placeholder="Task Time" />
        </div>
        <div class="form-group mt-3">
          <label for="assign-to">Assign To</label>
          <select id="assign-to" class="form-select">
            <option selected>Choose...</option>
             <% @all_users.each do |user| %>
            <option value="<%=user.id%>"><%= user.name+" "+user.surname %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group mt-3">
          <label for="assign-to">Priority</label>
          <select id="assign-to" class="form-control">
            <option selected>Choose...</option>
            <option value="0">Low</option>
            <option value="1">Medium</option>
            <option value="2">High</option>
          </select>
        </div>
        <div class="form-group mt-3">
        <label for="task-attachment">Add attachment related to task</label>
          <input type="file" class="form-control" id="task-attachment" placeholder="" />
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="close-modal">
          Close
        </button>
        <button type="button" class="btn btn-primary" id="add-user-to-db">
         Assign Task
        </button>
      </div>
    </div>
  </div>
</div>